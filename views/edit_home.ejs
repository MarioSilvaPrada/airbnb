<% include partials/header.ejs %>

<form action="/rooms/<%= id %>?_method=PUT" method="POST" id='user_form'>

    <div>
        <label for="beds_quantity">Number of beds</label>
        <input type="number" name="beds" min="0" max="10" value = "<%= data.beds %>"> <br>
    </div>
    <div>
        <label for="img_url">URL:</label>
        <input type="url" name="url" value = "<%= data.main_image %>"> <br>
    </div>
    <div>
        <label for="price">Price:</label>
        <input type="number" name="price" value = "<%= data.price %>"> <br>
    </div>
    <div>
        <label for="title">Title</label>
        <input type="text" name="title" value = "<%= data.name %>"> <br>
    </div>

    <input type="submit">

</form>
<% include partials/footer.ejs %>

</html>